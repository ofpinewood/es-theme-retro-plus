license:        MIT License
-->
<theme>
  <formatVersion>4</formatVersion>
  <resolution>1280 720</resolution>
  <include>./variables.xml</include>

  <view name="system,basic,detailed,video,grid">
    <image name="background" extra="true">
      <tile>true</tile>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <path>./_inc/images/tile.png</path>
      <color>${backgroundColor}FF</color>
    </image>

    <image name="help-background" extra="true">
      <tile>true</tile>
      <origin>0 0</origin>
      <pos>0 0.955</pos>
      <size>1 0.050</size>
      <path>./_inc/images/tile.png</path>
      <color>f59000</color>
      <zIndex>19</zIndex>
    </image>

    <helpsystem name="help">
      <origin>0 0</origin>
      <pos>0.005 0.964</pos>
      <textColor>${textColorDark}</textColor>
      <iconColor>${textColorDark}</iconColor>
      <fontPath>${fontPath}</fontPath>
    </helpsystem>

    <!-- <text name="logoText">
      <fontPath>${fontPath}</fontPath>
      <color>${textColor}</color>
      <forceUppercase>true</forceUppercase>
    </text> -->

    <textlist name="gamelist">
      <fontPath>${fontPath}</fontPath>
      <primaryColor>${textColorDark}</primaryColor>
      <secondaryColor>${textColorDark}</secondaryColor>
      <selectorColor>00000000</selectorColor>
      <selectedColor>${textColor}</selectedColor>
      <lineSpacing>1.2</lineSpacing>
    </textlist>
  </view>

  <view name="system">
    <carousel name="systemcarousel">
      <type>horizontal</type>
      <origin>0 0</origin>
      <pos>0 0.5</pos>
      <size>1 0.5</size>
      <logoAlignment>center</logoAlignment>
      <logoSize>0.25 0.155</logoSize>
      <logoScale>1</logoScale>
      <maxLogoCount>2</maxLogoCount>
      <color>00000000</color>
    </carousel>

    <image name="background-system" extra="true">
      <path>./_inc/images/gradient-system.png</path>
      <origin>0 0</origin>
      <pos>0 0.5</pos>
      <size>1 0.5</size>
      <zIndex>11</zIndex>
    </image>

    <text name="systemInfo">
      <fontPath>${fontPath}</fontPath>
      <color>${textColor}</color>
      <pos>0 0.87</pos>
      <backgroundColor>00000000</backgroundColor>
    </text>
  </view>

  <view name="basic"></view>

  <view name="detailed">
    <text name="md_name,md_description,md_developer,md_publisher,md_genre,md_players">
      <visible>false</visible>
			<fontPath>${fontPath}</fontPath>
      <fontSize>0.04</fontSize>
      <alignment>left</alignment>
      <color>${textColor}</color>
      <lineSpacing>1</lineSpacing>
      <origin>0 0</origin>
    </text>

    <image name="logo">
      <visible>false</visible>
    </image>

    <textlist name="gamelist">
      <alignment>left</alignment>
      <origin>0 0</origin>
      <pos>0.66 0.33</pos>
      <size>0.33 0.61</size>
      <fontSize>0.04</fontSize>
    </textlist>

    <text name="md_name">
      <visible>true</visible>
      <pos>0.005 0.005</pos>
      <fontSize>0.06</fontSize>
    </text>

    <image name="background-detailed-top" extra="true">
      <path>./_inc/images/gradient-detailed-top.png</path>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 0.06</size>
      <zIndex>18</zIndex>
    </image>

    <image name="background-detailed-bottom" extra="true">
      <path>./_inc/images/gradient-detailed-bottom.png</path>
      <origin>0 0</origin>
      <pos>0 0.33</pos>
      <size>1 0.66</size>
      <zIndex>18</zIndex>
    </image>
  </view>

  <view name="video"></view>
  <view name="grid"></view>
</theme>