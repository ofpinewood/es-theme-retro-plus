<theme>
  <formatVersion>4</formatVersion>
  <resolution>1280 720</resolution>
  <include>./variables.xml</include>

  <view name="system, basic, detailed, video, grid">
    <image name="background" extra="true">
      <tile>true</tile>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <path>./_inc/images/tile.png</path>
      <color>${backgroundColor}FF</color>
    </image>

    <text name="logoText">
      <fontPath>${fontPath}</fontPath>
      <color>${textColor}</color>
      <forceUppercase>true</forceUppercase>
    </text>

    <!-- <image name="corner-logo" extra="true">
			<tile>false</tile>
			<pos>0.01 0.01</pos>
			<origin>0 0</origin>
			<maxSize>0.1 0.1</maxSize>
			<path>./_inc/images/logo-27x27.gif</path>
		</image> -->

    <image name="background-help" extra="true">
      <path>./_inc/images/tile.png</path>
      <origin>0 1</origin>
      <pos>0 1</pos>
      <size>1 0.070</size>
      <color>${backgroundColor}</color>
    </image>

    <helpsystem name="help">
      <textColor>555555</textColor>
      <iconColor>555555</iconColor>
      <fontPath>${fontPath}</fontPath>
    </helpsystem>

    <textlist name="gamelist">
      <fontPath>${fontPath}</fontPath>
    </textlist>
  </view>

  <view name="system">
    <carousel name="systemcarousel">
      <type>horizontal</type>
      <size>1 0.25</size>
      <pos>0 0.68</pos>
      <logoAlignment>center</logoAlignment>
      <logoSize>0.25 0.155</logoSize>
      <logoScale>1</logoScale>
      <maxLogoCount>2</maxLogoCount>
      <color>00000000</color>
    </carousel>

    <image name="background-carousel" extra="true">
      <path>./_inc/images/gradient-50-100.png</path>
      <origin>0 1</origin>
      <pos>0 1</pos>
      <size>1 0.35</size>
      <zIndex>11</zIndex>
    </image>

    <text name="systemInfo">
      <fontPath>${fontPath}</fontPath>
      <color>${textColor}</color>
      <pos>0 0.68</pos>
      <backgroundColor>00000000</backgroundColor>
    </text>
  </view>

  <view name="basic"></view>
  <view name="detailed"></view>
  <view name="video"></view>
  <view name="grid"></view>
</theme>