<!--
theme name:     RetroPlus
version:        1.0
author:         Peter van den Hout
website:        https://github.com/ofpinewood/es-theme-retro-plus
license:        MIT License
-->
<theme>
  <formatVersion>4</formatVersion>
  <resolution>1280 720</resolution>
  <include>./variables.xml</include>

  <view name="system,basic,detailed,video,grid">
    <image name="background" extra="true">
      <tile>true</tile>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <path>./_inc/images/tile.png</path>
      <color>${backgroundColor}FF</color>
    </image>

    <text name="logoText">
      <fontPath>${fontPath}</fontPath>
      <color>${textColor}</color>
      <forceUppercase>true</forceUppercase>
    </text>

    <image name="background-help" extra="true">
      <tile>true</tile>
      <origin>0 1</origin>
      <pos>0 1</pos>
      <size>1 0.070</size>
      <path>./_inc/images/tile.png</path>
      <color>${backgroundColor}FF</color>
    </image>

    <helpsystem name="help">
      <textColor>${textColorDark}</textColor>
      <iconColor>${textColorDark}</iconColor>
      <fontPath>${fontPath}</fontPath>
    </helpsystem>

    <textlist name="gamelist">
      <fontPath>${fontPath}</fontPath>
      <primaryColor>${textColorDark}</primaryColor>
      <secondaryColor>${textColorDark}</secondaryColor>
      <selectorColor>00000000</selectorColor>
      <selectedColor>${textColor}</selectedColor>
      <lineSpacing>1.2</lineSpacing>
    </textlist>
  </view>

  <view name="system">
    <carousel name="systemcarousel">
      <type>horizontal</type>
      <size>1 0.25</size>
      <pos>0 0.68</pos>
      <logoAlignment>center</logoAlignment>
      <logoSize>0.1875 0.11625</logoSize>
      <logoScale>1</logoScale>
      <maxLogoCount>2</maxLogoCount>
      <color>00000000</color>
    </carousel>

    <image name="background-carousel" extra="true">
      <path>./_inc/images/gradient-50-bt.png</path>
      <origin>0 1</origin>
      <pos>0 1</pos>
      <size>1 0.35</size>
      <zIndex>11</zIndex>
    </image>

    <text name="systemInfo">
      <fontPath>${fontPath}</fontPath>
      <color>${textColor}</color>
      <pos>0 0.87</pos>
      <backgroundColor>00000000</backgroundColor>
    </text>
  </view>

  <view name="basic,detailed">
    <image name="logo">
      <origin>1 1</origin>
      <pos>0.98 0.92</pos>
      <maxSize>0.25 0.155</maxSize>
    </image>

    <textlist name="gamelist">
      <alignment>right</alignment>
      <origin>1 0</origin>
      <pos>0.99 0.01</pos>
      <size>0.5 0.8</size>
    </textlist>

    <image name="background-gamelist" extra="true">
      <path>./_inc/images/gradient-50-rl.png</path>
      <origin>1 0</origin>
      <pos>1 0</pos>
      <size>0.4 1</size>
      <zIndex>19</zIndex>
    </image>

    <image name="background-help" extra="true">
      <tile>false</tile>
      <origin>0 1</origin>
      <pos>0 1</pos>
      <size>1 0.09</size>
      <path>./_inc/images/gradient-50-bt.png</path>
      <zIndex>19</zIndex>
    </image>
  </view>

  <view name="detailed">
    <text name="md_name,md_description,md_developer,md_publisher,md_genre,md_players">
			<fontPath>${fontPath}</fontPath>
      <fontSize>0.025</fontSize>
      <alignment>left</alignment>
      <color>${textColor}</color>
      <lineSpacing>1</lineSpacing>
      <origin>0 0</origin>
    </text>

    <text name="md_lbl_genre,md_lbl_players,md_lbl_lastplayed,md_lbl_releasedate,md_lbl_developer,md_lbl_publisher">
			<fontPath>${fontPath}</fontPath>
      <fontSize>0.018</fontSize>
      <forceUppercase>1</forceUppercase>
      <alignment>left</alignment>
      <color>${textColorDark}</color>
      <lineSpacing>1</lineSpacing>
      <origin>0 0</origin>
    </text>

    <datetime name="md_releasedate,md_lastplayed">
      <fontPath>${fontPath}</fontPath>
      <fontSize>0.025</fontSize>
      <alignment>left</alignment>
      <color>${textColor}</color>
      <lineSpacing>1</lineSpacing>
      <origin>0 0</origin>
    </datetime>

    <text name="md_description">
      <pos>0.01 0.01</pos>
      <size>0.42 0.65</size>
    </text>

    <text name="md_lbl_genre">
			<pos>0.01 0.675</pos>
		</text>
    <text name="md_genre">
      <pos>0.01 0.675</pos>
    </text>

    <text name="md_lbl_releasedate">
			<pos>0.01 0.725</pos>
		</text>
    <datetime name="md_releasedate">
      <pos>0.01 0.725</pos>
      <format>%Y</format>
    </datetime>

    <text name="md_lbl_players">
			<pos>0.01 0.775</pos>
		</text>
    <text name="md_players">
      <pos>0.01 0.775</pos>
    </text>

    <text name="md_lbl_developer">
			<pos>0.1 0.675</pos>
		</text>
    <text name="md_developer">
      <pos>0.1 0.675</pos>
    </text>

    <text name="md_lbl_publisher">
			<pos>0.1 0.725</pos>
		</text>
    <text name="md_publisher">
      <pos>0.1 0.725</pos>
    </text>

    <text name="md_lbl_lastplayed">
			<pos>0.1 0.775</pos>
		</text>
    <datetime name="md_lastplayed">
      <pos>0.1 0.775</pos>
      <format>%Y</format>
    </datetime>

    <rating name="md_rating">
      <origin>0 0</origin>
      <pos>0.01 0.825</pos>
      <size>0.05 0</size>
		</rating>

    <text name="md_name">
      <origin>0 0</origin>
      <pos>0.01 0.88</pos>
      <fontSize>0.085</fontSize>
      <size>0.72 0.01</size>
    </text>

    <image name="background-gameinfo" extra="true">
      <path>./_inc/images/gradient-50-lr.png</path>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>0.75 1</size>
      <zIndex>19</zIndex>
    </image>

    <image name="background-help" extra="true">
      <size>1 0.19</size>
    </image>

    <video name="md_video">
      <pos>0.6 0.5</pos>
      <origin>0.5 0.5</origin>
      <maxSize>1 1</maxSize>
      <zIndex>13</zIndex>
    </video>

    <image name="md_thumbnail">
      <tile>false</tile>
      <pos>0.6 0.5</pos>
      <origin>0.5 0.5</origin>
      <maxSize>1 1</maxSize>
      <zIndex>12</zIndex>
    </image>

    <image name="md_image">
      <tile>false</tile>
      <pos>0.6 0.5</pos>
      <origin>0.5 0.5</origin>
      <maxSize>1 1</maxSize>
      <zIndex>11</zIndex>
    </image>
  </view>

  <view name="video"></view>
  <view name="grid"></view>
</theme>